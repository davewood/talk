<div class="page-header">
  <h2>[% talk.title %]</h2>
  <a class="btn btn-mini" href="[% c.uri_for(c.controller('Slide').action_for('create'), [talk.id]) %]">
    <i class="icon-plus"></i>
  </a>
</div>

[% FOREACH slide IN talk.slides %]
    <a href="[% c.uri_for(c.controller('Slide').action_for('show'), [talk.id, slide.id]) %]">[% slide.title %]</a><br/>
[% END %]
